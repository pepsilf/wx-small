.films-list{
    width:100%
}
.films-list .films-item{
    width:100%;
    display: flex;
    padding:40rpx 0;
}
.films-list .films-item .films-img{
    width:120rpx;
    height:169rpx;
}
.films-list .films-item .films-img image{
    width:100%;
    height:100%;
}
.films-list .films-item .films-info{
    width:517.5rpx;
    height:169rpx;
    padding-left:30rpx;
}
.films-list .films-item .films-info .films-name{
    font-size: 32rpx;
    line-height: 64rpx;
    width:467.5rpx;
    color: #000;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}
.films-list .films-item .films-info .films-grade{
    float: right;
    font-size: 32rpx;
    line-height: 64rpx;
    color: #fc7103;
}
.films-list .films-item .films-info .films-logo{
    float: right;
    font-size: 32rpx;
    line-height: 64rpx;
    color: #8e8e8e;
}
.films-list .films-item .films-info .films-intro{
    height: 48rpx;
    line-height: 48rpx;
    color: #8e8e8e;
    font-size: 24rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    width: 100%;
    display: inline-block;
}
.films-list .films-item .films-info .films-count{
    line-height: 24px;
    color: #8e8e8e;
    font-size: 12px;
    margin-right:80rpx;
}
.films-list .films-item .films-info .coning-soon .films-count{
    color:#fc7103;
}