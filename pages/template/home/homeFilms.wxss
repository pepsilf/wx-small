.film-item{
    padding:0 34rpx;
    margin-bottom: 34rpx;
    width:100%;
    font-size: 0;
}
.film-item image{
    width:100%;
    height:382.6rpx;
}
.film-info-ing{
    display: flex;
    justify-content: space-between;
    background: #fff;
    width:100%;
    height: 100rpx;
}
.film-info-ing .film-info{
    padding-left:56rpx;
    padding-top:26rpx;
}
.film-info-ing .film-info .film-name{
    font-size:24rpx;
    line-height: 30rpx;
}
.film-info-ing .film-info .film-count{
    font-size:20rpx;
    color: #9a9a9a;
    line-height: 15px;
}
.film-info-ing .film-grade{
    color: #f78360;
    line-height: 100rpx;
    margin-right: 30rpx;
    font-size: 36rpx;
}

.film-info-soon{
    display: flex;
    justify-content: space-between;
    background: #fff;
    width:100%;
    height: 70rpx;
}
.film-info-soon .film-name{
    padding-left:56rpx;
    line-height:70rpx;
    font-size:24rpx;
}
.film-info-soon .film-data{
    line-height:70rpx;
    font-size: 20rpx;
    color: RGB(245, 162, 125);
    padding-right: 80rpx;
}
.filmType{
    width: 320rpx;
    height: 60rpx;
    border: 1px solid #aaa;
    border-radius: 30rpx;
    margin: 20rpx auto 60rpx;
    text-align: center;
    line-height: 60rpx;
    font-size: 24rpx;
    color: #616161;
    cursor: pointer;
}
.dividing-line {
    position: relative;
    margin-top: 30px;
    margin-bottom: 30px;
    border-bottom: 1px solid #a8a8a8;
}
.upcoming {
    width: 65px;
    height: 20px;
    margin: 0 auto;
    margin-bottom: 0px;
    margin-bottom: -10px;
    border-radius: 5px;
    font-size: 10px;
    line-height: 20px;
    text-align: center;
    color: #eee;
    background-color: #a7a7a7;
}