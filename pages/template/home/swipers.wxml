<template name="swipers">
    <swiper 
        class="swiper"
        indicator-dots="true"
        autoplay="true"
        circular="true" 
        interval="3000" 
        duration="500">
        <block wx:for="{{imgUrls}}" wx:key="{{index}}">
            <swiper-item>
                <image src="{{item.imageUrl}}" class="slide-image"/>
            </swiper-item>
        </block>
    </swiper>
</template>